@model Parking.Models.Vehicles

@{
    ViewData["Title"] = "Details";
    SelectList datos = (SelectList)ViewBag.ParkingCell;
}

<h1>Detalles</h1>

<div>
    <h4>Vehiculos</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Document)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Document)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Plate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Plate)
        </dd>
           <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ParkingCellId)
        </dt>
        <dt class = "col-sm-10">           
            @Html.DropDownListFor(x => x.ParkingCellId, datos, "Seleciona una opción", htmlAttributes: new{@class="form"})
        </dt>
    </dl>
</div>
<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.VehicleId">Editar</a> |
    <a class="btn btn-secondary" asp-action="Index">Regresar</a>
</div>
