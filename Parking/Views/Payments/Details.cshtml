@model Parking.Models.Payments

@{
    ViewData["Title"] = "Details";
        SelectList datos = (SelectList)ViewBag.Vehicles;
}

<h1>Detalles</h1>

<div>
    <h4>Pagos</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VehicleId)
        </dt>
        <dt class = "col-sm-10">           
            @Html.DropDownListFor(x => x.VehicleId, datos, "Seleciona una opción", htmlAttributes: new{@class="form"})
        </dt>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PaymentValue)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PaymentValue)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateCreate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateCreate)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.PaymentId">Editar</a> |
    <a class="btn btn-secondary" asp-action="Index">Regresar</a>
</div>
