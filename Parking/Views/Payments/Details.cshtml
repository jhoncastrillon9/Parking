@model Parking.Models.Payments

@{
    ViewData["Title"] = "Details";
        SelectList datos = (SelectList)ViewBag.Vehicles;
}

<h1>Details</h1>

<div>
    <h4>Payments</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VehicleId)
        </dt>
        <dt class = "col-sm-10">           
            @Html.DropDownListFor(x => x.VehicleId, datos, "Seleciona una opción", htmlAttributes: new{@class="form"})
        </dt>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PaymentValue)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PaymentValue)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateCreate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateCreate)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.PaymentId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
