@model Parking.Models.CheckIngCheckOut

@{
    ViewData["Title"] = "Details";
      SelectList datos = (SelectList)ViewBag.Vehicles;
       SelectList datosTypeChecks = (SelectList)ViewBag.TypeChecks;
}

<h1>Detalles</h1>

<div>

<h4>Registro de ingreso y salidad</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VehicleId)
        </dt>
        <dt class = "col-sm-10">           
            @Html.DropDownListFor(x => x.VehicleId, datos, "Seleciona una opción", htmlAttributes: new{@class="form"})
        </dt>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TypeCheckId)
        </dt>
        <dt class = "col-sm-10">           
            @Html.DropDownListFor(x => x.TypeCheckId, datosTypeChecks, "Seleciona una opción", htmlAttributes: new{@class="form"})
        </dt>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateCreate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateCreate)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.CheckIngCheckOutId">Editar</a> |
    <a class="btn btn-secondary" asp-action="Index">Regresar</a>
</div>
