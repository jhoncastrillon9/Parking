@model IEnumerable<Parking.Models.Vehicles>

@{
    ViewData["Title"] = "Index";
}

<div style="display: flex; justify-content: space-between;">
  <div id="emptyDiv">
      <h1>Vehiculos</h1>
  </div>
  <div> <a class="btn btn-primary"  asp-action="Create">Crear nuevo</a></div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Document)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Plate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParkingCellId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Document)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Plate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParkingCellId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.VehicleId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.VehicleId">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.VehicleId">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
